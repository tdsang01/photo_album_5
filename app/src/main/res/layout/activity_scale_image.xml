<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_scale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/scale_image_table_layout_margin"
        android:layout_marginRight="@dimen/scale_image_table_layout_margin"
        android:layout_marginStart="@dimen/scale_image_table_layout_margin">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/scale_image_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_seek_bar_width_"/>

            <SeekBar
                android:id="@+id/seek_width_image"
                android:layout_width="@dimen/scale_image_seek_bar_width"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/scale_image_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_seek_bar_height"/>

            <SeekBar
                android:id="@+id/seek_height_image"
                android:layout_width="@dimen/scale_image_seek_bar_width"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>

</RelativeLayout>